{% extends '::base.html.twig' %}

{% block body -%}
    <h1 xmlns="http://www.w3.org/1999/html">Films list</h1>
    <a href="{{ path('catalog_films') }}">Back</a>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Uri</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('catalog_films_films_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if(entity.image) %}<img height="50px" src="{{ asset(entity.image) }}"/>{% endif %}</td>
                <td>{{ entity.uri }}</td>
                <td>{{ entity.created|date("F jS \\a\\t g:ia") }}</td>
                <td>{{ entity.updated|date("F jS \\a\\t g:ia") }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('catalog_films_films_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('catalog_films_films_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('catalog_films_films_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
